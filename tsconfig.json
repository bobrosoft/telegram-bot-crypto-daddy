{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "exclude": [
    "**/*.spec.ts"
  ]
}